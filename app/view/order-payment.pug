extends ./layout

block body
  main
    .container-fluid
      .row.justify-content-center
        .col-sm-8.col-md-6
          h1.mt-3 クレジットカード決済
          form(role='form')
            .form-group.mb-3
              label.form-label(for='number') カード番号
              input.form-control(type='number' name='number' id='number' aria-required='true')
            .form-group.mb-3
              label.form-label(for='name') 名義
              input.form-control(type='text' name='name' id='name' aria-required='true')
            fieldset.mb-3
              legend.fs-6 有効期限
              .row
                .col
                  .input-group
                    input.form-control(type='number' name='month' id='month' min='1' max='12' step='1' aria-required='true')
                    label.input-group-text(for='month') 月
                .col
                  .input-group
                    input.form-control(type='number' name='month' id='month' min='2021' step='1' aria-required='true')
                    label.input-group-text(for='month') 年
            .form-group.mb-3
              label.form-label(for='code') セキュリティコード
              input.form-control(type='number' name='code' id='code' aria-required='true')
            .d-grid
              a.btn.btn-primary(href='../finish/') このカードで支払う
